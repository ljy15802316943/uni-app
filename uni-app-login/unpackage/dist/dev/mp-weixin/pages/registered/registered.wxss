page {
  background-color: #efeff4;
}
.app {
  padding: 0 0.6rem;
  box-sizing: border-box;
  position: relative;
}
.app .input-box {
  margin-top: 2.125rem;
  background-color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.app .input-box .input {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 18px;
  width: 100%;
  height: 2.375rem;
  padding: 0 0.875rem;
  box-sizing: border-box;
}
.app .input-box .text {
  width: 4rem;
}
.app .input-box .user::before {
  position: absolute;
  right: 10px;
  bottom: 0;
  top: 2.5rem;
  left: 20px;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #c8c7cc;
}
.app .input-box .pswd::before {
  position: absolute;
  right: 10px;
  bottom: 0;
  top: 4.8rem;
  left: 20px;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #c8c7cc;
}
.app .button-box {
  margin: 0 auto;
  margin-top: 2.26rem;
  width: 90%;
  text-align: center;
}
.app .button-box button.button {
  background-color: #0faeff;
}

