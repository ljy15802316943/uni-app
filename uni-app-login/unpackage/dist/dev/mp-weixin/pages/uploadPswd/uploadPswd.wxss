page {
  background-color: #efeff4;
}
.app {
  padding: 0 1rem;
  box-sizing: border-box;
}
.app .email {
  margin-top: 2rem;
  height: 2.5rem;
  background-color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 18px;
}
.app .email text {
  margin: 0 1rem;
}
.app .email .item {
  position: relative;
  left: 0.5rem;
  top: 0.25rem;
}
.app .submit {
  width: 90%;
  margin: 0 auto;
  margin-top: 2.24rem;
}
.app .submit button.button {
  background-color: #0faeff;
}

