page {
  background-color: #f8f8f8;
}
.goodsList {
  width: 750rpx;
  height: 100%;
  position: relative;
}
.goodsList .navigation {
  width: 750rpx;
  height: 88rpx;
  background-color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: fixed;
  top: calc(100% - 88rpx - constant(safe-area-inset-top));
  left: 0;
  z-index: 99;
}
.goodsList .navigation .title {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 32rpx;
  color: #303133;
}
.goodsList .navigation .title .title-box {
  height: 100%;
  width: 4rem;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  border-bottom: 1px solid #FFFFFF;
}
.goodsList .navigation .title .title-box .yticon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  width: 32rpx;
  height: 14rpx;
  margin-left: 4rpx;
  font-size: 28rpx;
  color: #888;
}
.goodsList .navigation .title .title-box .yticonIconShangActive {
  color: #fa436a;
}
.goodsList .navigation .title .title-box-activate {
  border-bottom: 1px solid #fa436a;
  color: #fa436a;
}
.goodsList .navigation .title-icon {
  width: 80rpx;
  height: 100%;
  font-size: 48rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
}
.goodsList .navigation .title-icon::after {
  content: '';
  position: absolute;
  top: 0.66rem;
  background-color: #ededed;
  width: 1rpx;
  height: 38rpx;
  right: 80rpx;
}

