page {
  width: 750rpx;
  height: 100%;
  background-color: #f8f8f8;
}
.detail-show .swiper-box {
  width: 100%;
  height: 722rpx;
}
.detail-show .swiper-box .swiper-item {
  width: 100%;
  height: 100%;
}
.detail-show .swiper-box .swiper-item image {
  width: 100%;
  height: 100%;
}
.detail-show .content-box1 {
  width: 100%;
  height: auto;
  padding: 1rem;
  box-sizing: border-box;
  background-color: #FFFFFF;
}
.detail-show .content-box1 .title {
  font-size: 32rpx;
  color: #303133;
  height: 50rpx;
  line-height: 50rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.detail-show .content-box1 .money {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 10rpx 0rpx;
}
.detail-show .content-box1 .money .text2 {
  margin: 0 10rpx;
}
.detail-show .content-box1 .money .text3 {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 2px 5px;
  background: #fa436a;
  font-size: 12px;
  color: #fff;
  border-radius: 3px;
  box-sizing: border-box;
}
.detail-show .content-box1 .content {
  width: 90%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 1rem;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
}
.detail-show .share {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 2rem;
  width: 750rpx;
  padding: 0 1rem;
  box-sizing: border-box;
  background-color: #fbebf6;
  position: relative;
}
.detail-show .share .text-icon {
  width: 2rem;
  height: auto;
  border: 1px solid #fa436a;
  border-radius: 5rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  overflow: hidden;
  z-index: 100;
}
.detail-show .share .text-icon::before {
  position: absolute;
  left: 0.9rem;
  z-index: 88;
  content: '';
  width: 1rem;
  height: 1rem;
  background-color: #fa436a;
  border-radius: 50%;
}
.detail-show .share .text-icon .text-icon1 {
  z-index: 99;
  margin-left: -0.2rem;
