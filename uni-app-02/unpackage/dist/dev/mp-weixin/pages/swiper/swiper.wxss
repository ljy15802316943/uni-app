.app {
  padding: 0 20rpx;
}
.app .swiper-title {
  height: 3.75rem;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-align-content: center;
          align-content: center;
  color: #B2B2B2;
  font-size: 42rpx;
}
.app .swiper-title:before {
  content: '';
  position: absolute;
  left: 6.9rem;
  top: 2.5rem;
  right: 0;
  bottom: 0;
  width: 6.5rem;
  height: 1rpx;
  background: #B2B2B2;
}
.swiper .swiper-item {
  height: 15rem;
  width: 100%;
  text-align: center;
  line-height: 8rem;
  font-size: 1rem;
  font-weight: 600;
}

